<div class="container">
<div class="row">
   <h1>Sign In</h1>
      <%= form_tag do %>
        <div class="">
          <%= label_tag :email %>
          <%= text_field_tag :email %>
        </div>
        <div class="">
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </div>
        <%= submit_tag "Sign In", class: "btn btn-warning" %> or
        <%= link_to 'Sign Up', new_user_path, class: "btn btn-warning" %>

      <% end %>

  </div>
</div>
