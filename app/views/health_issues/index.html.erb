<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to "Juice", root_path, class: "navbar-brand", style:"color:#f39c12" %>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Juice Recipes", juices_path, style:"color:#f39c12"%></li>
        <li><%= link_to "Health Issues", health_issues_path, style:"color:#f39c12"%></li>
      </ul>
    </div>
  </nav>
  <div class="health_container">
    <div class="row">
      <div class="col-lg-12">
        <%= form_tag(juices_path, :method => "get", enforce_utf8: false, id: "search-form") do %>
        <div class="issuescontainer">
          <% @health_issues.each do |health_issue| %>
          <div class="issues">
            <%= image_tag attachment_url(health_issue, :photo, :fill, 180, 180, format: "") %>
            <%= check_box_tag "juice_id-#{health_issue.id}", params[:health_issue_id], html: { placeholder: "Search Juices"} %>
            <%= health_issue.name %>
          </div>
          <% end %>
        </div>
        <%= submit_tag "Search", :name => nil, class: "btn btn-warning"%>
        <% end %>
      </div>
    </div>
  </div>
