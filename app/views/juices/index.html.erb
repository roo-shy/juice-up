<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
    <%= link_to "Juice", root_path, class: "navbar-brand", style:"color:#f39c12" %>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
      <li><%= link_to "Juice Recipes", juices_path, style:"color:#f39c12"%></li>
      <li><%= link_to "Health Issues", health_issues_path, style:"color:#f39c12"%></li>
      </ul>
    </div>
</nav>
<div class="health_container">
  <div class="row">
    <div class="col-lg-12">
      <div class="juicescontainer">
        <% @juices.each do |juice| %>
        <div class="juices">
          <h3><%= link_to juice.name, juices_path(id: juice.id) %></h3>
          <%= image_tag attachment_url(juice, :photo, :fill, 300, 300, format: "png") %>
          <p><%= juice.description %></p>
          <p><%= number_to_currency(juice.price) %></p>
          <%= link_to 'Add to Cart', add_to_cart_path(juice_id: juice.id), class: "btn", method: :post %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
