<div class="container">
  <div class="row">
    <h4><%= @current_user.name %>'s cart</h4>
    <% if @order %>
    <% @order.order_items.each do |order_item| %>
    <hr>
    <%= image_tag attachment_url(order_item.juice, :photo, :fill, 440, 440, format: "png") %></br>
    <div class="checkoutlist">
    <ul>
      <li><strong>Title:</strong>  <%= order_item.juice.name %></li>
      <li><strong>Quantity:</strong>  <%= order_item.quantity %></li>
      <li><strong>Total Price:</strong>  <%= number_to_currency order_item.total_price %></li>
      <li><%= link_to 'Remove', remove_from_cart_path(juice_id: order_item.juice_id), method: :delete, class: "btn btn-danger"%></li>
    </ul>
    </div>
    <% end %>

    <hr>
    <h4>Order Total:
      <%= number_to_currency @order.total_price %></h4>
    <div class="">
      <% if @order.order_items.present? %>
      <%= form_tag process_payment_path, method: :post, id: "payment-form" do %>

      <script
        src="https://checkout.stripe.com/checkout.js"
        class="stripe-button"
        data-key="pk_test_LCoIGMP5jXdesNt7Wyoh5pSL"
        data-name="Juice App"
        data-description="<%= @order.description %>"
        data-amount="<%= @order.total_price_in_cents %>"
        data-email="<%= @current_user.email %>"
        data-shipping-address="true"
        data-locale="auto">
      </script>

      <% end %>
      <% end %>
    </br>
      <%= link_to 'Continue Shopping', juices_path %>
    </div>
    <% end %>
  </div>
</div>
